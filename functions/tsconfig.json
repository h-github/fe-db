{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "declaration": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["./src", "./src/types"],
  "exclude": ["./node_modules"]
}
